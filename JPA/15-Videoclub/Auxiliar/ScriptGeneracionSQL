CREATE DATABASE Videoclub;


USE Videoclub;


CREATE TABLE Peliculas (
    Codigo INT PRIMARY KEY auto_increment,
    Titulo VARCHAR(100) NOT NULL,
    Director VARCHAR(50) NOT NULL,
    PrecioAlquiler DECIMAL(5, 2) NOT NULL
);

